					img(src="i/package/package_boat.jpg", alt="")
	+block_def({
		class: ['dark ideal'],
		name: 'В каталог',
		title: 'Сотрудничаем с лучшими брендами',
		img: 'pack'
	})
	+shopRow({
		title: `Каталог пакетов`,
		mod: 'motor_products_main',
		h5: true,
		count: 5,
		img: 'products_1'
	})