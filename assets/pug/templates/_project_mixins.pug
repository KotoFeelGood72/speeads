// Shop row

mixin shopRow(data)
	section.products_row 
		.section_in
			.products_row_main(class=data.mod) 
				.section_title.products_row_title 
					if data.h2 === true 
						h2=data.title
					else if data.h3 === true 
						h2=data.title
					else if data.h4 === true 
						h2=data.title
					else if data.h5 === true 
						h2=data.title
					else if data.h6 === true 
						h2=data.title
				ul.products_row_grid
					-for(i = 0; i < data.count; i++ )
						li
							+products({
								img: data.img
							})

// End shop row


