// Start mixin navigation

mixin nav(data)
	.slider_nav(class=`${data.mod}_nav`)
		each item in ['prev', 'next']
			.slider_nav(class=`${data.mod}_btn--${item}` class=item) 
				button(type="button")
					+icon(item)

// End mixin

