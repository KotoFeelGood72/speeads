// Button
mixin btn(data)
	if data.link === true
		.btn(class=data.clas)
			a(href="#") 
				p=data.name
					.btn_icon 
						+icon('arr-right')
	else
		.btn(class=data.clas)
			button(type=data.type ? data.type : 'button')
				if data.name
					p=data.name
					.btn_icon 
						+icon('arr-right')
				else
					p Оставить заявку
					.btn_icon 
						+icon('arr-right')
// End button

// Products card

